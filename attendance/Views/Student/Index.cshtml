@{
    ViewBag.CurrentMenu = "student";
}

@section header{
    <h1>
        学生管理
    </h1>
    <ol class="breadcrumb">
        <li>基础数据管理</li>
        <li class="active">学生管理</li>
    </ol>
}

<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title"></h3>
                <div class="pull-right box-tools">
                    <button id="btnAdd" class="btn btn-primary" type="button" data-original-title="添加" data-toggle="tooltip" data-widget="">
                        <i class="fa fa-plus-square"></i>&nbsp;&nbsp;添加
                    </button>
                </div>
            </div>
            <div class="box-body">
                <div class="table-scrollable">
                    <table class="table table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="sample_2_info">
                        <thead>
                            <tr role="row">
                                <th tabindex="0" aria-label="">
                                    学号
                                </th>
                                <th tabindex="0" aria-label="">
                                    姓名
                                </th>
                                <th tabindex="0" aria-label="">
                                    性别
                                </th>
                                <th tabindex="0" aria-label="">
                                    院系
                                </th>
                                <th tabindex="0" aria-label="">
                                    班级
                                </th>
                                <th tabindex="0" aria-label="">
                                    出生日期
                                </th>
                                <th tabindex="0" aria-label="">
                                    籍贯
                                </th>
                                <th tabindex="0" aria-label="">
                                    电话
                                </th>
                                <th tabindex="0" aria-label="">
                                    操作
                                </th>
                            </tr>
                        </thead>
                        <tbody id="tableBody"></tbody>
                    </table>
                    <div class="paging-toolbar">
                        <ul id="grid_paging_part"></ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@*Html.Partial("_Edit")*@
@section scripts{
    <script src="~/js/student_index.js"></script>
}


